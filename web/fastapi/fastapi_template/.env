# === Основные настройки ===
PROJECT_NAME="FastAPI Template"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# === Сервер ===
HOST="0.0.0.0"
PORT=8000
API_V1_STR="/api/v1"

# === Безопасность ===
SECRET_KEY="change-this-in-production-to-a-secure-random-string"
ADMIN_API_KEY="admin-secret-key-change-in-production"
API_KEY="client-api-key-change-in-production"

# === CORS ===
# Разрешенные домены (через запятую)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === Хосты ===
ALLOWED_HOSTS=localhost,127.0.0.1

# === База данных (опционально) ===
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# === Логирование ===
LOG_LEVEL=INFO
# LOG_FILE=/var/log/fastapi/app.log